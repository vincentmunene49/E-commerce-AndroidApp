<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_shadow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="#B8D9FA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_content"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@color/g_gray500"
        app:layout_constraintStart_toStartOf="@+id/img_shadow"
        app:layout_constraintTop_toTopOf="@+id/img_shadow"
        app:layout_constraintBottom_toBottomOf="@+id/img_shadow"
        app:layout_constraintEnd_toEndOf="@+id/img_shadow"/>


    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/img_content"
        app:layout_constraintTop_toTopOf="@id/img_content"
        app:layout_constraintBottom_toBottomOf="@id/img_content"
        app:layout_constraintEnd_toEndOf="@id/img_content"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_light"
        android:visibility="visible"/>


</androidx.constraintlayout.widget.ConstraintLayout>